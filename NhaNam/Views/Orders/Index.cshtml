@model IEnumerable<NhaNam.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DANH SÁCH ĐƠN HÀNG</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressDeliverry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CusPhone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressDeliverry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CusPhone)
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "Details", new { id = item.OrderID }, new { @class = "btn btn-sm btn-info" }) |
            @Html.ActionLink("Sửa", "Edit", new { id = item.OrderID }, new { @class = "btn btn-sm btn-success" }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.OrderID }, new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>
